        </section>

    </main>

    <div id="slide-button">
        <div id="counter"></div>
        <div id="up-arrow"><img src="./svg/up-arrow.svg" alt="go-up"></div>
        <div id="down-arrow"><img src="./svg/down-arrow.svg" alt="go-down"></div>
    </div>

    <script src="js/slide-page-counter.js"></script>
    <script src="js/redirects.js"></script>
    <script>
        ScrollReveal().reveal('section', {
            duration: 1500,
            origin: 'bottom',
            interval: 200
        });

        ScrollReveal().reveal('#zero', {
            duration: 5000,
            origin: 'bottom',
            interval: 200
        });

        document.querySelectorAll('.item').forEach((item) => {
            ScrollReveal().reveal(item, {
                duration: Math.random() * 3500,
                origin: 'bottom',
                interval: 200
            });
        });

    </script>
