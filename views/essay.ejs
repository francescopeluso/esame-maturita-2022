<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Francesco Peluso - Maturit√† 2022</title>
    <link rel="stylesheet" href="css/essay.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://unpkg.com/scrollreveal"></script>
</head>
<body>
    <%- include('../partials/navbar') %>
    <main>
        <% file.argomento.forEach((argument) => { %>
            <header style="background-image: url('<%= argument.image %>'); background-size: 100%; background-repeat: no-repeat; background-position: <%= argument.imageposition %> ">
                <h2><%= argument.titolo %></h2>
            </header>
            <article>
                <p>
                    <%- include('../content/' + file.disciplina + '/' + argument.body) %>
                </p>
            </article>
        <% }); %>
    </main>
    <%- include('../partials/footer') %>
    <script>
        ScrollReveal().reveal('body', {
            duration: 1500,
            origin: 'bottom',
            interval: 200
        });
    </script>
</body>
</html>